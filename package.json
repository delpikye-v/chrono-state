{
  "name": "chrono-state-z",
  "version": "1.1.0",
  "description": "Chrono-state-z: Reactive, intent-first state management with FSM, forms, async atoms.",
  "license": "MIT",
  "author": "Delpi.Kye",

  "sideEffects": false,

  "main": "build/index.cjs.js",
  "module": "build/index.esm.js",
  "types": "build/index.d.ts",

  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.esm.js",
      "require": "./build/index.cjs.js"
    },
    "./react": {
      "types": "./build/react/index.d.ts",
      "import": "./build/react/index.esm.js",
      "require": "./build/react/index.cjs.js"
    },
    "./devtools": {
      "types": "./build/devtools/index.d.ts",
      "import": "./build/devtools/index.esm.js",
      "require": "./build/devtools/index.cjs.js"
    }
  },

  "files": ["build"],

  "scripts": {
    "clean": "rimraf build",
    "build": "rollup -c",
    "cb": "npm run clean && npm run build",
    "prepublishOnly": "npm run cb"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/delpikye-v/chrono-state.git"
  },

  "homepage": "https://github.com/delpikye-v/chrono-state#readme",
  "bugs": {
    "url": "https://github.com/delpikye-v/chrono-state/issues"
  },

  "keywords": [
    "react",
    "reactive",
    "state-management",
    "external-store",
    "intent-runtime",
    "fsm",
    "form-engine",
    "async-atom",
    "computed-state",
    "timeline",
    "devtools",
    "no-hooks",
    "concurrent-safe",
    "preemption"
  ],

  "peerDependencies": {
    "react": "^18.0.0"
  },

  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.6",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.3.3",
    "tslib": "^2.6.2",

    "react": "^18.2.0",
    "@types/react": "^18.2.43"
  }
}
